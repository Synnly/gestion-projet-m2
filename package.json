{
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@testing-library/react": "^16.3.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2"
    },
    "workspaces": [
        "apps/api",
        "apps/client"
    ],
    "scripts": {
        "api": "npm run start:dev --workspace=apps/api",
        "client": "npm run dev --workspace=apps/client",
        "dev": "npm-run-all --parallel api client",
        "test": "npm run test --workspace=apps/api && npm run test --workspace=apps/client",
        "test:seq": "npm run test:seq --workspace=apps/api",
        "build": "npm run build --workspace=apps/client && npm run build --workspace=apps/api",
        "start": "NODE_ENV=production npm run start --workspace=apps/api"
    },
    "dependencies": {
        "@nestjs/schedule": "^6.0.1"
    }
}
